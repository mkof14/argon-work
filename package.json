{
  "name": "agron-platform",
  "private": true,
  "version": "0.1.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev:web": "npm run dev -w @agron/web",
    "dev:api": "npm run dev -w @agron/api",
    "build:web": "npm run build -w @agron/web",
    "start:web": "npm run start -w @agron/web",
    "build": "npm run build --workspaces",
    "lint": "npm run lint --workspaces",
    "test": "npm run test --workspaces"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
