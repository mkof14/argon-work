# Public URL used for canonical/hreflang/metadata
NEXT_PUBLIC_SITE_URL=https://your-domain.vercel.app

# Optional external API URL (leave empty if using Next.js internal /api routes)
NEXT_PUBLIC_API_URL=

# Required in production for lead/corporate/waitlist persistence
SUPABASE_URL=
SUPABASE_SERVICE_ROLE_KEY=

# Auth security (required)
AUTH_SECRET=replace_with_long_random_secret

# Google OAuth (optional but recommended)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=https://your-domain.vercel.app/api/auth/google/callback
